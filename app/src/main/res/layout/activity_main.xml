<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".ui.activities.MainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:background="@color/grey">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium_32"
            android:layout_weight="0.25"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_medium_32"
            android:orientation="vertical">
            <TextView style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="5"
            android:textSize="@dimen/spacing_medium_32"
            android:textColor="@color/white"/>
            <TextView style="@style/text"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Рейтинг"
                android:textSize="@dimen/font_large_18"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <View style="@style/vert_line"></View> </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium_32"
            android:layout_weight="0.5"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_medium_32"
            android:orientation="vertical">
            <TextView style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5"
                android:textSize="@dimen/spacing_medium_32"
                android:textColor="@color/white"/>
            <TextView style="@style/text"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Написано строк кода"
                android:textSize="@dimen/font_large_18"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <View style="@style/vert_line"></View> </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium_32"
            android:layout_weight="0.25"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_medium_32"
            android:orientation="vertical">
            <TextView style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5"
                android:textSize="@dimen/spacing_medium_32"
                android:textColor="@color/white"/>
            <TextView style="@style/text"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Проектов"
                android:textSize="@dimen/font_large_18"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <!-- -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">

        <ImageView style="@style/icon.left"
            android:src="@drawable/ic_phone_black_24dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/spacing_medium_32"
            android:layout_marginLeft="@dimen/spacing_medium_32">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText style="@style/text"
                      android:textColor="@color/black"
                android:id="@+id/phone_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="Мобильный телефон"
                android:text="+7 00000000000"
                android:enabled="false"
                android:focusable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView style="@style/icon.right"
            android:src="@drawable/ic_phone_in_talk_black_24dp"/>
    </LinearLayout>
    <View style="@style/line"/>

    <!--  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">

        <ImageView style="@style/icon.left"
                   android:src="@drawable/ic_mail_black_24dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/spacing_medium_32"
            android:layout_marginLeft="@dimen/spacing_medium_32">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText style="@style/text"
                          android:textColor="@color/black"
                    android:id="@+id/email_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textWebEmailAddress"
                    android:hint="E-mail"
                    android:text="email@gmail.com"
                    android:enabled="false"
                    android:focusable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView style="@style/icon.right"
                   android:src="@drawable/ic_send_black_24dp"/>
    </LinearLayout>
    <View style="@style/line"/>

    <!--  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">

        <ImageView style="@style/icon.left"
                   android:src="@drawable/ic_social_vk_24dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/spacing_medium_32"
            android:layout_marginLeft="@dimen/spacing_medium_32">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText style="@style/text"
                          android:textColor="@color/black"
                          android:id="@+id/vk_et"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:inputType="textWebEmailAddress"
                          android:hint="Профиль VK"
                          android:text="vk.com/eugenekotov"
                          android:enabled="false"
                          android:focusable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView style="@style/icon.right"
                   android:src="@drawable/ic_visibility_black_24dp"/>
    </LinearLayout>
    <View style="@style/line"/>

    <!--  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">

        <ImageView style="@style/icon.left"
                   android:src="@drawable/ic_github_24dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/spacing_medium_32"
            android:layout_marginLeft="@dimen/spacing_medium_32">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText style="@style/text"
                          android:textColor="@color/black"
                          android:id="@+id/github_et"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:inputType="textWebEmailAddress"
                          android:hint="Репозиторий"
                          android:text="https://github.com/Eugene-Ba/"
                          android:enabled="false"
                          android:focusable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView style="@style/icon.right"
                   android:src="@drawable/ic_visibility_black_24dp"/>
    </LinearLayout>
    <View style="@style/line"/>


    <!--  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">

        <ImageView style="@style/icon.left"
                   android:src="@drawable/ic_account_circle_black_24dp"
            />
        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:layout_marginLeft="@dimen/spacing_medium_32"
                    android:layout_marginRight="@dimen/spacing_normal_16">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/me_et"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:hint="О себе"
                            android:text="@string/me"
                            android:enabled="false"
                            android:textColor="@color/black"
                            android:focusable="false"/>
                    </android.support.design.widget.TextInputLayout>
            </LinearLayout>
    </LinearLayout>
</LinearLayout></ScrollView>